<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
    <display-name>ROOT</display-name>
    <welcome-file-list>
        <welcome-file>/www.meatbox.co.kr/home.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.user.login.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginAction.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>com.user.logout.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.user.register.controller.RegisterController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/registerNormal.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/registerNormalAction.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/registerSeller.do</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/registerSellerAction.do</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/fo/member/memberAddPage.do</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/businessInfoAction.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productController</servlet-name>
        <servlet-class>com.product.controller.ProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/productViewPage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productController</servlet-name>
        <url-pattern>/productList.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartController</servlet-name>
        <servlet-class>com.cart.action.controller.CartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cartController</servlet-name>
        <url-pattern>/cart/cartPage.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartController</servlet-name>
        <url-pattern>/cart/cartAddAction.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myMenuController</servlet-name>
        <servlet-class>com.my_menu.controller.MyMenuController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myMenuController</servlet-name>
        <url-pattern>/myMenu/myMenuMainPage.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>com.order.controller.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/order.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>com.search.controller.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/search/*</url-pattern>
    </servlet-mapping>
        
</web-app>